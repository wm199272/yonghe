<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 门店表的映射文件	namespace值为对应接口的全路径 -->
<mapper namespace="com.tedu.dao.DoorMapper">
	
	<!-- 1.查询所有门店信息	 id值为对应接口中方法的名字 -->
	<select id="findAll" resultType="com.tedu.pojo.Door">
		select * from tb_Door
	</select>
	
	<!-- 2.新增门店信息 -->
	<insert id="addDoor">
		insert into tb_door 
		values(#{id}, #{name}, #{tel}, #{addr})
	</insert>
	
	<!-- 3.根据id删除指定门店信息 -->
	<delete id="deleteDoorById">
		delete from tb_door where id=#{id}
	</delete>
	
	<!-- 4.根据id查询指定门店信息 -->
	<select id="findDoorById" resultType="com.tedu.pojo.Door">
		select * from tb_door where id=#{id}
	</select>
	
	<!-- 5.根据id更新指定门店信息 -->
	<update id="updateDoorById">
		update tb_door set name=#{name},tel=#{tel},addr=#{addr}
		where id=#{id}
	</update>
	
	
	

</mapper>
